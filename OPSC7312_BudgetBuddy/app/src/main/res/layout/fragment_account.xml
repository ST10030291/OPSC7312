<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_1"
    tools:context=".activities.AccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:id="@+id/layout1">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:paddingTop="70dp"
            android:orientation="vertical"
            android:background="@drawable/dialog_background"
            android:gravity="center_horizontal">

            <!-- Name -->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="@string/email"
                android:textColor="@color/blue"
                android:fontFamily="@font/mplus_rounded"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Email -->
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/mplus_rounded"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:src="@drawable/line_seperator"/>

            <!-- Total Budgets -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="@string/total_budgets_made"
                android:textColor="@color/blue"
                android:fontFamily="@font/mplus_rounded"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_total_budgets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/mplus_rounded"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="@string/total_budgeted_with_budget_buddy"
                android:textColor="@color/blue"
                android:fontFamily="@font/mplus_rounded"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <!-- Total budgeted -->
                <TextView
                    android:id="@+id/tv_total_budgeted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mplus_rounded"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:src="@drawable/line_seperator"/>

                <!-- Change Language Toggle -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/icon_language"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/translate_icon"
                            android:contentDescription="@string/todo"
                            android:layout_marginEnd="40dp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/languageSwitch"
                            android:layout_width="289dp"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:buttonTint="@color/white"
                            app:trackTint="@color/blue"
                            app:thumbTint="@color/white"
                            android:text="@string/change_language_to_afrikaans"
                            android:textColor="@color/black" />
                    </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:src="@drawable/line_seperator"/>

            <Button
                android:id="@+id/exportBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:layout_marginTop="10dp"
                android:text="Export Budget to CSV"
                android:textColor="@color/white"
                android:textStyle="bold" />

                <!-- Budget History -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:text="@string/budget_history"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mplus_rounded"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/BudgetHistoryListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/pageName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:text="@string/account"
            android:textColor="@color/blue_10"
            android:textSize="24sp"
            android:textStyle="bold" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profile Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_account_circle_24"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
            />
            <ImageView
                android:id="@+id/change_profile_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/change_profile_icon"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                app:layout_constraintTop_toTopOf="@id/profile_image"
                app:layout_constraintEnd_toEndOf="@id/profile_image"
                android:clickable="true"
                android:focusable="true"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </RelativeLayout>
</ScrollView>