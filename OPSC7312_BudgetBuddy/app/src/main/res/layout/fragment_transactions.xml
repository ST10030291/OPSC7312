<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TransactionsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="384dp"
            android:layout_height="15dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/horizontal_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/createBudgetButton"
            android:layout_width="121dp"
            android:layout_height="59dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="1dp"
            android:backgroundTint="@color/white"
            android:text="Create"
            android:textAlignment="viewStart"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="64dp"
            android:text="Add Transaction"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/transactionNameInput"
            android:layout_width="351dp"
            android:layout_height="51dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="37dp"
            android:background="@drawable/input_box"
            android:hint="       Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createBudgetButton" />

        <EditText
            android:id="@+id/amountInput"
            android:layout_width="351dp"
            android:layout_height="51dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/input_box"
            android:hint="       Amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transactionNameInput" />

        <Spinner
            android:id="@+id/categoryInput"
            android:layout_width="351dp"
            android:layout_height="51dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/input_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amountInput" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>